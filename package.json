{
  "name": "@myparcel/pdk-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "pnpm --recursive --stream build",
    "prepare": "husky install",
    "serve": "pnpm --recursive --parallel serve",
    "test": "pnpm --recursive --stream test",
    "test:e2e": "pnpm --recursive --stream test:e2e",
    "test:e2e:watch": "pnpm --recursive --parallel test:e2e --watch",
    "test:unit": "pnpm --recursive --stream test:unit",
    "test:unit:watch": "pnpm --recursive --parallel test:unit --watch",
    "test:watch": "pnpm --recursive --parallel test --watch"
  },
  "lint-staged": {
    "packages/**/*.{ts,vue}": "eslint --fix"
  },
  "prettier": "@myparcel/prettier-config",
  "release": {
    "extends": "@myparcel/semantic-release-config/github-npm"
  },
  "devDependencies": {
    "@myparcel/eslint-config": "^3.6.2",
    "@myparcel/prettier-config": "^1.1.0",
    "@myparcel/semantic-release-config": "^4.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.5.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "typescript": "^4.8.3"
  }
}
