{
  "name": "@myparcel-pdk/monorepo",
  "version": "1.0.0-alpha.0",
  "private": true,
  "repository": "github:myparcelnl/js-pdk",
  "license": "MIT",
  "workspaces": [
    "apps/**",
    "libs/**"
  ],
  "scripts": {
    "build": "nx run-many --runner=cloud --target=build",
    "build:dev": "run build:dev:base --runner=cloud",
    "build:dev:base": "nx run-many --target=build:dev",
    "clean": "nx run-many --target=clean",
    "lint": "nx affected --target=lint",
    "prepare": "is-ci || husky install",
    "serve": "run build:dev:base --output-style=stream npx concurrently yarn:watch yarn:serve:demo",
    "serve:demo": "npx concurrently yarn:serve:demo:frontend yarn:serve:demo:backend",
    "serve:demo:backend": "nx serve backend-demo",
    "serve:demo:frontend": "nx serve admin-demo",
    "test": "nx run-many --target=test --output-style=stream",
    "test:run": "nx run-many --target=test:run --output-style=stream",
    "typecheck": "nx run-many --target=typecheck",
    "watch": "nodemon",
    "ws:clean": "cd $0 && rimraf lib dist coverage .eslintcache tsconfig.build.tsbuildinfo tsconfig.json node_modules",
    "ws:lint": "eslint_d --cache $0 || eslint --cache $0",
    "ws:lint:fix": "eslint_d --cache --fix $0 || eslint --cache --fix $0",
    "ws:test": "cd $0 && vitest",
    "ws:test:run": "cd $0 && (vitest run --coverage --dangerouslyIgnoreUnhandledErrors || true)",
    "ws:tsup:build": "cd $0 && tsup-node --minify",
    "ws:tsup:build:dev": "cd $0 && tsup-node --sourcemap",
    "ws:tsup:buildOnly": "cd $0 && tsup-node",
    "ws:tsup:typecheck": "cd $0 && tsc --noEmit",
    "ws:tsup:watch": "cd $0 && tsup-node --sourcemap --watch",
    "ws:vite:build": "cd $0 && vite build",
    "ws:vite:build:dev": "cd $0 && vite build --mode development",
    "ws:vite:buildOnly": "cd $0 && vite build",
    "ws:vite:typecheck": "cd $0 && vue-tsc --noEmit",
    "ws:vite:watch": "cd $0 && vite build --mode development --watch"
  },
  "lint-staged": {
    "*.{json,md,yml}": "prettier --write",
    "*.{ts,vue,js,cjs,mjs}": "yarn run ws:lint:fix",
    "package.json": "npx sort-package-json"
  },
  "nodemonConfig": {
    "exec": "yarn build:dev:base --output-style=stream",
    "ext": "ts,vue",
    "ignore": [
      "**/dist/**"
    ],
    "watch": [
      "apps",
      "libs"
    ]
  },
  "prettier": "@myparcel/prettier-config",
  "devDependencies": {
    "@monodeploy/plugin-github": "^0.9.0",
    "@myparcel-eslint/eslint-config-esnext": "^1.2.0",
    "@myparcel-eslint/eslint-config-node": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier-typescript": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier-typescript-vue": "^1.2.0",
    "@myparcel/prettier-config": "^1.1.0",
    "@nrwl/nx-cloud": "^15.1.0",
    "@vue/tsconfig": "^0.1.3",
    "bundlewatch": "^0.3.3",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^8.34.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sort-exports": "^0.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "monodeploy": "^3.7.0",
    "nodemon": "^2.0.20",
    "nx": "^15.7.2",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2"
  },
  "packageManager": "yarn@3.5.0",
  "bundlewatch": {
    "ci": {
      "trackBranches": [
        "main",
        "alpha",
        "beta"
      ]
    },
    "files": [
      {
        "path": "./apps/admin/dist/**/*.js"
      },
      {
        "path": "./apps/admin-component-tests/dist/**/*.js"
      },
      {
        "path": "./apps/admin-preset-default/dist/**/*.js"
      },
      {
        "path": "./apps/admin-preset-bootstrap4/dist/**/*.js"
      },
      {
        "path": "./apps/app-builder/dist/**/*.js"
      },
      {
        "path": "./apps/checkout/dist/**/*.js"
      },
      {
        "path": "./libs/common/dist/**/*.js"
      },
      {
        "path": "./libs/frontend/core/dist/**/*.js"
      },
      {
        "path": "./libs/frontend/delivery-options/dist/**/*.js"
      }
    ]
  }
}
