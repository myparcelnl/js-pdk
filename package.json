{
  "name": "@myparcel-pdk/monorepo",
  "version": "1.0.0-alpha.0",
  "private": true,
  "repository": "github:myparcelnl/js-pdk",
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "apps/**",
    "libs/**"
  ],
  "scripts": {
    "build": "nx run-many --runner=cloud -t build",
    "build:dev": "nx run-many -t build:dev",
    "clean": "nx run-many -t clean",
    "lint": "nx affected -t lint --output-style=stream",
    "lint:fix": "nx affected -t lint:fix --output-style=stream",
    "prepare": "echo 'prepare' && (is-ci || husky install)",
    "serve": "run build:dev --output-style=stream npx concurrently yarn:watch yarn:serve:demo",
    "serve:demo": "npx concurrently yarn:serve:demo:frontend yarn:serve:demo:backend",
    "serve:demo:backend": "nx serve backend-demo",
    "serve:demo:frontend": "nx serve admin-demo",
    "test": "nx run-many -t test --output-style=stream",
    "test:run": "nx run-many -t test:run --output-style=stream",
    "typecheck": "nx run-many -t typecheck",
    "ws:clean": "cd $0 && rimraf dist coverage .eslintcache tsconfig.build.tsbuildinfo",
    "ws:lint": "eslint --cache $0",
    "ws:lint:fix": "eslint --cache --fix $0",
    "ws:test": "cd $0 && vitest",
    "ws:test:run": "cd $0 && (vitest run --coverage --dangerouslyIgnoreUnhandledErrors || true)",
    "ws:ts:build": "cd $0 && tsc --project tsconfig.build.json --emitDeclarationOnly --declarationDir dist --declaration",
    "ws:ts:typecheck": "cd $0 && tsc --noEmit",
    "ws:vue:build": "cd $0 && vue-tsc --project tsconfig.build.json --declarationDir dist",
    "ws:vue:typecheck": "cd $0 && vue-tsc --noEmit"
  },
  "lint-staged": {
    "*.{json,md,yml}": "prettier --write",
    "*.{ts,vue,js,cjs,mjs}": "yarn run ws:lint:fix",
    "package.json": "npx sort-package-json"
  },
  "prettier": "@myparcel/prettier-config",
  "resolutions": {
    "eslint-plugin-import": "npm:eslint-plugin-i@^*"
  },
  "devDependencies": {
    "@monodeploy/plugin-github": "^1.0.0",
    "@myparcel-eslint/eslint-config-esnext": "^1.2.0",
    "@myparcel-eslint/eslint-config-import": "^1.0.0",
    "@myparcel-eslint/eslint-config-node": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier-typescript": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier-typescript-vue": "^1.2.0",
    "@myparcel/prettier-config": "^1.1.0",
    "@nrwl/nx-cloud": "^16.0.5",
    "@vue/tsconfig": "^0.1.3",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^8.34.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sort-exports": "^0.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "monodeploy": "^4.0.0",
    "nodemon": "^2.0.20",
    "nx": "^16.0.1",
    "prettier": "^2.8.4",
    "rimraf": "^5.0.0"
  },
  "packageManager": "yarn@3.5.1",
  "volta": {
    "node": "18.16.0"
  }
}
