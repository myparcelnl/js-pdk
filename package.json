{
  "name": "@myparcel-pdk/monorepo",
  "version": "1.0.0-alpha.0",
  "private": true,
  "repository": "github:myparcelnl/js-pdk",
  "license": "MIT",
  "workspaces": [
    "apps/**",
    "libs/**"
  ],
  "scripts": {
    "build": "nx run-many --runner=cloud --target=build",
    "build:dev": "run build:dev:base --runner=cloud",
    "build:dev:base": "nx run-many --target=build:dev",
    "clean": "nx run-many --target=clean",
    "lint": "nx affected --target=lint",
    "prepare": "is-ci || husky install",
    "serve": "run build:dev:base --output-style=stream npx concurrently yarn:watch yarn:serve:demo",
    "serve:demo": "nx serve demo",
    "test": "nx affected --target=test --output-style=stream",
    "test:run": "nx affected --target=test:run --output-style=stream",
    "typecheck": "nx affected --target=typecheck",
    "watch": "nodemon",
    "ws:clean": "cd $0 && rimraf lib dist",
    "ws:lint": "eslint --cache $0",
    "ws:test": "cd $0 && vitest",
    "ws:test:run": "cd $0 && vitest run --coverage",
    "ws:tsup:build": "cd $0 && tsup-node --minify",
    "ws:tsup:build:dev": "cd $0 && tsup-node --sourcemap",
    "ws:tsup:buildOnly": "cd $0 && tsup-node",
    "ws:tsup:typecheck": "cd $0 && tsc --noEmit",
    "ws:tsup:watch": "cd $0 && tsup-node --sourcemap --watch",
    "ws:vite:build": "cd $0 && vite build",
    "ws:vite:build:dev": "cd $0 && vite build --mode development",
    "ws:vite:buildOnly": "cd $0 && vite build",
    "ws:vite:typecheck": "cd $0 && vue-tsc --noEmit",
    "ws:vite:watch": "cd $0 && vite build --mode development --watch"
  },
  "lint-staged": {
    "*.{json,md,yml}": "prettier --write",
    "*.{ts,vue}": "eslint --fix --cache",
    "package.json": "npx sort-package-json"
  },
  "nodemonConfig": {
    "exec": "yarn build:dev:base --output-style=stream",
    "ext": "ts,vue",
    "ignore": [
      "**/lib/**"
    ],
    "watch": [
      "apps",
      "libs"
    ]
  },
  "prettier": "@myparcel/prettier-config",
  "devDependencies": {
    "@myparcel-eslint/eslint-config-esnext": "^1.2.0",
    "@myparcel-eslint/eslint-config-node": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier-typescript": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier-typescript-vue": "^1.2.0",
    "@myparcel/prettier-config": "^1.1.0",
    "@nrwl/nx-cloud": "latest",
    "eslint": "^8.33.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sort-exports": "^0.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "monodeploy": "^3.6.0",
    "nodemon": "^2.0.20",
    "nx": "^15.6.3",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2"
  },
  "packageManager": "yarn@3.3.0"
}
