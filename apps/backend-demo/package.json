{
  "name": "@myparcel-pdk/backend-demo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "exports": "./src/index.ts",
  "files": [
    "./src"
  ],
  "scripts": {
    "build": "run translations:init && nitropack build",
    "postinstall": "npx nitropack prepare",
    "lint": "run ws:lint \"$(pwd)\"",
    "lint:fix": "run ws:lint:fix \"$(pwd)\"",
    "serve": "run translations:init && nitropack dev",
    "translations:import": "npx -q @edielemoine/google-docs-importer --documentId 1TPE7gwG2GXtX7vlKIaskwMy0Xr4o_ir-lsedWB86xyc -o data/translations",
    "translations:init": "test -f data/translations/en.json || yarn translations:import"
  },
  "devDependencies": {
    "@apollo/server": "^4.7.4",
    "@edielemoine/google-docs-importer": "^1.0.2",
    "@myparcel-pdk/common": "workspace:*",
    "@myparcel/ts-utils": "^1.9.0",
    "@types/node": "^18.14.6",
    "graphql": "^16.6.0",
    "h3": "^1.5.0",
    "nitropack": "^2.2.3",
    "serverless": "^3.28.1",
    "serverless-plugin-typescript": "^2.1.4",
    "typescript": "^5.0.3"
  },
  "nx": {
    "targets": {
      "build": {
        "inputs": [
          "{projectRoot}/nitro.config.ts",
          "{projectRoot}/routes/**/*",
          "{projectRoot}/src/**/*"
        ],
        "outputs": [
          "{projectRoot}/dist",
          "{projectRoot}/.netlify/functions-internal",
          "{projectRoot}/.output",
          "{projectRoot}/.nitro"
        ]
      }
    }
  }
}
