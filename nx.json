{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  },
  "defaultProject": "@myparcel/pdk-components",
  "npmScope": "myparcel-pdk",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "parallel": 10,
        "cacheableOperations": [
          "build",
          "build:dev",
          "buildOnly",
          "watch"
        ]
      }
    }
  },
  "namedInputs": {
    "production": [
      "default",
      "!{projectRoot}/**/*.spec.*",
      "!{projectRoot}/**/__tests__",
      "!{projectRoot}/**/*.test.*"
    ],
    "default": [
      "!{projectRoot}/lib",
      "{projectRoot}/**/*",
      "{workspaceRoot}/package.json",
      "{workspaceRoot}/tsconfig.build.json"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "production"
      ],
      "outputs": [
        "{projectRoot}/lib"
      ]
    },
    "build:dev": {
      "dependsOn": [
        "^build:dev"
      ],
      "inputs": [
        "production"
      ],
      "outputs": [
        "{projectRoot}/lib"
      ]
    },
    "buildOnly": {
      "dependsOn": [
        "^buildOnly"
      ],
      "inputs": [
        "production"
      ],
      "outputs": [
        "{projectRoot}/lib"
      ]
    },
    "serve": {
      "dependsOn": [
        "build:dev"
      ],
      "outputs": [
        "default"
      ]
    },
    "test": {
      "inputs": [
        "default"
      ],
      "outputs": [
        "{projectRoot}/coverage"
      ]
    },
    "watch": {
      "dependsOn": [
        "^build:dev"
      ],
      "inputs": [
        "production"
      ],
      "outputs": [
        "{projectRoot}/lib"
      ]
    }
  },
  "defaultBase": "main"
}
