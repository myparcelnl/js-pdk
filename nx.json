{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "alpha",
  "affected": {
    "defaultBase": "alpha"
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  },
  "npmScope": "myparcel-pdk",
  "namedInputs": {
    "default": ["!{projectRoot}/lib", "{projectRoot}/**/*"],
    "production": [
      "default",
      "!{projectRoot}/**/*.spec.*",
      "!{projectRoot}/**/*.test.*",
      "!{projectRoot}/**/__tests__"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production"],
      "outputs": ["{projectRoot}/lib", "{projectRoot}/dist"]
    },
    "build:dev": {
      "dependsOn": ["^build:dev"],
      "inputs": ["production"],
      "outputs": ["{projectRoot}/lib", "{projectRoot}/dist"]
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.cjs"],
      "outputs": ["{projectRoot}/.eslintcache", "{projectRoot}/src/**/*"]
    },
    "serve": {
      "dependsOn": ["build:dev"],
      "outputs": ["{projectRoot}/lib", "{projectRoot}/dist"]
    },
    "test:run": {
      "inputs": ["default"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "watch": {
      "dependsOn": ["^build:dev"],
      "inputs": ["production"],
      "outputs": ["{projectRoot}/lib", "{projectRoot}/dist"]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "parallel": 10,
        "cacheableOperations": ["build", "build:dev", "lint", "test:run"]
      }
    }
  }
}
